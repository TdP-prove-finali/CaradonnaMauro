               <children>
                  <Label text="View Cost Variance By">
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin></Label>
                  <ComboBox fx:id="fieldCmbBox" onAction="#handleDisable" prefWidth="150.0">
